@model IEnumerable<Faculdade.Models.Curso>

@{
    ViewBag.Title = "Cursos";
}

<h2 style="color:#CD5C5C";>Cursos</h2>

<p>
    @Html.ActionLink("Adicionar Curso", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th style="color:#CD5C5C";>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th style="color:#CD5C5C";></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td style="color:#CD5C5C";>
            @Html.ActionLink("Editar", "Edit", new { id=item.CursoID }) |
            @Html.ActionLink("Detalhar", "Details", new { id=item.CursoID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.CursoID })
        </td>
    </tr>
}

</table>
