@model IEnumerable<Faculdade.Models.Aluno>

@{
    ViewBag.Title = "Alunos";
}

<h2 style="color:#CD5C5C";>Alunos</h2>

<p>
    @Html.ActionLink("Adicionar aluno", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th style="color:#CD5C5C";>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th style="color:#CD5C5C";>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th style="color:#CD5C5C";>
            @Html.DisplayNameFor(model => model.DataMatricula)
        </th>
        <th style="color:#CD5C5C";></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sobrenome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataMatricula)
        </td>
        <td style="color:#CD5C5C";>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detalhar", "Details", new { id=item.ID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
